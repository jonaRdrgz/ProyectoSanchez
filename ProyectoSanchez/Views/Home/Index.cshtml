@{
    ViewBag.Title = "Pagina Principal";
}

<link href="~/Content/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Consulta de Fecha Caledario
                </h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Mantenimiento de Fecha Caledario</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="row">
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="idTorneo">
                                    Torneo:
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" id="idTorneo" name="idTorneo">
                                        <option value="-1">Seleccione una Opción</option>
                                        @{List<ProyectoSanchez.ViewModels.TorneoVM> torneo = ViewBag.toreos; }
                                        @foreach (var item in torneo)
                                        {
                                            <option value="@item.IdArea">Area #@item.NumeroArea : @item.Area</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Fechas del torneo seleccionado <small> Seleccione una fecha para ver más detalles</small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="ln_solid"></div>
                        <div class="table-responsive">
                            <table id="previewTableTorneo" class="table  table-responsive table-striped display nowrap jambo_table bulk_action" style="width:100%">

                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Fecha </th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Acción</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="previewTableTorneoBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- /page content -->
<script src="~/Content/vendors/moment/min/moment-with-locales.min.js"></script>
<script src="~/Content/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>