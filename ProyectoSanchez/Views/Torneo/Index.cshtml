
@{
    ViewBag.Title = "Torneos";
}

<link href="~/Content/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<!-- page content -->

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Consulta de posiciones torneo
                </h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-5">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Torneo</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="row">
                            <div class="item form-group">
                                <label class="control-label col-md-4 col-sm-4 col-xs-14" for="idTorneo">
                                    Torneo:
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-8 col-sm-8 col-xs-15">
                                    <select class="form-control" id="idTorneo" name="idTorneo" onchange="getPosicionesXTorneo()">
                                        <option value="-1">Seleccione una Opción</option>
                                        @{List<ProyectoSanchez.ViewModels.TorneoVM> torneo = ViewBag.torneos; }
                                        @foreach (var item in torneo)
                                        {
                                            <option value="@item.IdTorneo">@item.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 col-sm-10 col-xs-10">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Posiciones del torneo seleccionado</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="ln_solid"></div>
                        <div class="table-responsive">
                            <table id="previewTablePosiciones" class="table  table-responsive table-striped display nowrap jambo_table bulk_action" style="width:100%">

                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Nombre </th>
                                        <th class="column-title">Part.Jugados </th>
                                        <th class="column-title">Ganados </th>
                                        <th class="column-title">Empatados </th>
                                        <th class="column-title">Perdidos </th>
                                        <th class="column-title">Gol.Favor </th>
                                        <th class="column-title">Gol.Contra </th>
                                        <th class="column-title">Puntos </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="previewTablePosicionesBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- /page content -->
