
@{
    ViewBag.Title = "Jugador";
}

<link href="~/Content/vendors/bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>
                    Consulta de Jugadores
                </h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Selección del jugador</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="row">
                            <div class="item form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="idJugador">
                                    Jugador:
                                    <span class="required">*</span>
                                </label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select class="form-control" id="idJugador" name="idJugador" onchange="getInfoJugador()">
                                        <option value="-1">Seleccione una Opción</option>
                                        @{List<ProyectoSanchez.ViewModels.JugadorVM> jugador = ViewBag.jugadores; }
                                        @foreach (var item in jugador)
                                    {
                                        <option value="@item.IdJugador">@item.Nombre</option>
                                }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2> Información del Jugador</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" id="NombreJugador" for="Nombre">
                                Nombre:
                            </label></br></br>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" id="EdadJugador" for="Edad">
                                Edad:
                            </label></br></br>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" id="PesoJugador" for="Peso">
                                Peso en kilogramos:
                            </label></br></br>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" id="AlturaJugador" for="Altura">
                                Altura en metros:
                            </label></br></br>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                            </div>
                        </div>
                        <button type="button" id="botonEquiposJugador" class="btn btn-primary">Ver historial de equipos</button>
                    </div>
                </div>
        </div>
    </div>
    </div>
</div>

<!-- /page content -->
